<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChronoTimer.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ChronoTimer.Maui.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="ChronoTimer">
    <ShellContent
        ContentTemplate="{DataTemplate pages:ChronoSelectionPage}"
        Route="selection" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:SetupPage}"
        Route="setup" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:ChronoTimerPage}"
        Route="chrono" />
</Shell>
