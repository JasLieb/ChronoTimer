<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ChronoTimer.Maui.Controls"
             x:Class="ChronoTimer.Maui.Pages.ChronoTimerPage"
             Shell.NavBarIsVisible="False">
    <Grid 
        x:Name="PageContainer"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:ChronoTimer
            x:Name="ChronoTimer"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            ChronoState="{Binding ChronoState}"/>

        <Button
            Grid.Row="1"
            Margin="12"
            HorizontalOptions="CenterAndExpand"
            Text="Change Setup"
            Command="{Binding GotoSetupPageCommand}"/>
    </Grid>
</ContentPage>
