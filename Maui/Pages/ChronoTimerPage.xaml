<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ChronoTimer.Maui.Controls"
             x:Class="ChronoTimer.Maui.Pages.ChronoTimerPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <controls:ChronoTimer Grid.RowSpan="2" ChronoState="{Binding ChronoState}"/>

        <Button
            Grid.Row="1"
            Margin="12"
            HorizontalOptions="CenterAndExpand" 
            Text="Change Setup"
            Command="{Binding GotoSetupPageCommand}"/>
    </Grid>
</ContentPage>
