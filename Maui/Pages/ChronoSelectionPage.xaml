<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ChronoTimer.Maui.Pages.ChronoSelectionPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="48"
        VerticalOptions="Center"
        HorizontalOptions="Center">
        
        <Image Style="{x:StaticResource AppLogo}"/>

        <Button 
            Text="Make exercice"
            Command="{Binding SelectExerciceCommand}" />
        
        <Button 
            Text="Play chess"
            Command="{Binding SelectChessCommand}" />
    </VerticalStackLayout>
</ContentPage>
