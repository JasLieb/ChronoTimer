<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ChronoTimer.Maui.Controls"
    x:Class="ChronoTimer.Maui.Pages.SetupPage"
    HideSoftInputOnTapped="True"
    Shell.NavBarIsVisible="False">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="48"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="Center">
        <Image
            Source="{AppThemeBinding Light=app_logo_black.png, Dark=app_logo_white.png}"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="chronoTimer logo">
            
        </Image>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.ColumnSpan="2"
                Text="Exercise time :"
                FontSize="Medium"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                SemanticProperties.Description="Exercise time :"/>

            <controls:TimePicker Grid.Column="2"
                    SelectedTime="{Binding ExerciceTime.Value, Mode=OneWayToSource}"/>

        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.ColumnSpan="2"
                Text="Break time :"
                FontSize="Medium"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                SemanticProperties.Description="Break time :"/>

            <controls:TimePicker Grid.Column="2"
                SelectedTime="{Binding BreakTime.Value, Mode=OneWayToSource}"/>

        </Grid>

        <Frame BackgroundColor="{x:StaticResource Secondary}"
                IsVisible="{Binding IsErrorsVisible}"
                HorizontalOptions="CenterAndExpand" >
            <Label FontSize="Medium" TextColor="{x:StaticResource SecondaryDarkText}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Error : " />
                        <Span Text="{Binding Error}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Frame>
        
        <Button
            Text="Start Exercice"
            SemanticProperties.Hint="Start exercice following given time before"
            Command="{Binding StartExerciceCommand}"
            HorizontalOptions="CenterAndExpand"/>
    </VerticalStackLayout>
</ContentPage>
